---
import { Icon } from 'astro-icon/components';
import Card from './Card.astro';
const { title, date, source, url, description } = Astro.props.article;
const dateFormat = new Intl.DateTimeFormat('en-US', { dateStyle: 'long' });
---

<li>
    <Card>
        <h3 class="text-2xl text-blue-800 dark:text-blue-400">
            <a href={url}>{title}</a>
        </h3>
        <small>{dateFormat.format(new Date(date))} | {source}</small>
        <p class="text-lg my-2">{description}</p>
        <a
            href={url}
            class="flex items-center gap-2 text-blue-800 dark:text-blue-400"
        >
            Read more
            <Icon name="ph:arrow-right" />
        </a>
    </Card>
</li>
