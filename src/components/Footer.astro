<style>
    @animation rotate {
        from {
            transform: rotate(0);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .logo {
        animation: rotate 180s linear infinite;
        mask: url('/caged-ball.svg') no-repeat center;
    }
</style>
