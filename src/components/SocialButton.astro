---
import { Icon } from 'astro-icon/components';
import clsx from 'clsx';
const { icon, href, title } = Astro.props;
---

<a 
    href={href}
    class={clsx(
        'p-2 rounded',
        'text-2xl text-gray-700 dark:text-gray-200',
        'hover:bg-gray-200 dark:hover:text-gray-400',
        'dark:hover:bg-gray-800'
    )}
>
    <Icon
        name={icon}
        title={title}
    />
</a>
