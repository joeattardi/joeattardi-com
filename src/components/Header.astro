---
import DarkModeToggle from './DarkModeToggle.astro';
import NavBar from './NavBar.astro';
import HamburgerMenu from './HamburgerMenu.astro';
---

<header
    class="grid grid-cols-[auto_1fr_min-content] bg-slate-100 z-50 px-4 py-2 border-b border-b-zinc-200 dark:border-b-zinc-700 sticky top-0 items-center dark:bg-zinc-800"
>
    <a href="/" class="hover:scale-105 transition-transform home-link flex items-center gap-2">
        <img src="/logo.svg" class="w-10" />
        <strong>Joe Attardi</strong>
    </a>
    <NavBar />
    <div class="flex-grow flex items-center justify-end gap-4">
        <DarkModeToggle />
        <HamburgerMenu />
    </div>
</header>
