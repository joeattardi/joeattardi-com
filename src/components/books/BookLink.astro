---
import { Image } from 'astro:assets';

const { cover, title, href } = Astro.props;
---
<a class="flex flex-col items-center gap-4" href={href}>
  <Image 
    src={cover} 
    alt={title}
    class="h-72 w-auto shadow-lg hover:rotate-2 hover:scale-105 ease-out transition-transform"
  />
  <div class="flex flex-col items-center">
    <h3 class="italic text-center text-2xl">{title}</h3>
  </div>
</a>
