---
import { Image } from 'astro:assets';

const { title, subtitle, cover, href, published, description } = Astro.props;
---
<div class="flex flex-col sm:flex-row gap-8 items-center">
  <Image src={cover} class="cover w-48 sm:w-64 rotate-2 shadow-lg" alt={title} />
  <div class="flex flex-col gap-4 bg-slate-100 dark:bg-slate-800 rounded-lg p-8 items-start">
    <h2 class="text-5xl font-bold"><a href={href}>{title}</a></h2>
    <h3 class="text-3xl">{subtitle}</h3>
    <div class="text-xl">{published}</div>
    <p class="text-xl">{description}</p>
    <a 
      href={href} 
      class="inline-flex items-center gap-2 bg-orange-600 hover:bg-orange-500 text-white px-4 py-2 rounded"
    >
      <div class="text-lg">Learn More</div>
    </a>
  </div>
</div>
