<div class="hamburger sm:hidden flex">
  <div class="bg-black dark:bg-white"></div>
  <div class="bg-black dark:bg-white"></div>
  <div class="bg-black dark:bg-white"></div>
</div>

<script>
  const hamburger = document.querySelector<HTMLDivElement>('.hamburger');
  const nav = document.querySelector<HTMLUListElement>('#top-nav');

  hamburger?.addEventListener('click', async () => {
    hamburger.classList.toggle('open');
    nav?.classList.toggle('hidden');

    if (nav?.classList.contains('open')) {
      await nav.animate([
        { opacity: 1, transform: 'translateX(0)' },
        { opacity: 0, transform: 'translateX(16px)' }
      ], {
        duration: 200,
        easing: 'ease-out'
      }).finished;
    }

    nav?.classList.toggle('open');
  }); 
</script>

<style>
  .hamburger {
    z-index: 100;
    height: 24px;
    width: 24px;
    flex-direction: column;
    justify-content: space-around;
    cursor: pointer;
  }

  .hamburger > div {
    width: 100%;
    height: 3px;
    transition: all 250ms ease-in-out;
  }

  .hamburger.open > div:first-child {
    transform: translateY(7px) rotate(45deg);
  }

  .hamburger.open > div:nth-child(2) {
    opacity: 0;
    transform: scale(0);
  }

  .hamburger.open > div:last-child {
    transform: translateY(-9px) rotate(-45deg);
  }
</style>
