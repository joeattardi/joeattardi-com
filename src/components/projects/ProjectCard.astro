---
import { Icon } from 'astro-icon/components';
const { name, url } = Astro.props;
---

<div class="bg-slate-100 border border-slate-200 dark:bg-slate-900 dark:border-slate-800 rounded p-4">
    <h3 class="text-2xl">
        <a class="text-blue-800 dark:text-blue-400" href={url}>{name}</a>
    </h3>
    <div class="text-lg flex flex-col gap-4">
        <slot />
    </div>
    <a href={url} class="mt-4 flex items-center gap-2 text-blue-800 dark:text-blue-400">
        Project details
        <Icon name="ph:arrow-right" />
    </a>
</div>
