---
import { ViewTransitions } from 'astro:transitions';

import '@fontsource/atkinson-hyperlegible';
import '@fontsource/atkinson-hyperlegible/700.css';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---
<html lang="en">
  <head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
    <title>{title ? `${title} | Joe Attardi` : 'Joe Attardi'}</title>
    <ViewTransitions />
    <script is:inline>
      const themePreference = sessionStorage.getItem('theme');
      const isDarkMode = themePreference === 'dark' || (themePreference == null && window.matchMedia('(prefers-color-scheme: dark').matches);
      document.documentElement.classList.toggle('dark', isDarkMode);
    
      document.addEventListener('astro:after-swap', () => {
        const themePreference = sessionStorage.getItem('theme');
        const isDarkMode = themePreference === 'dark' || (themePreference == null && window.matchMedia('(prefers-color-scheme: dark').matches);
        document.documentElement.classList.toggle('dark', isDarkMode);
      });
    </script>
  </head>
  <body class="dark:bg-black text-black dark:text-white transition-colors">
    <div class="layout">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style>
  .layout {
    height: 100vh;
    display: grid;
    grid-template-rows: min-content 1fr min-content;
  }
</style>
